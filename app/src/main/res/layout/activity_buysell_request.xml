<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tom.tradeapp.activities.BuySellActivity"
    >
    <Spinner
        android:id="@+id/spinnerBuySell"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/coinsItems"
        android:spinnerMode="dialog"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Price"
            android:theme="@style/MyTextViewHeaderStyle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Amount"
            android:theme="@style/MyTextViewHeaderStyle"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Summary"
            android:theme="@style/MyTextViewHeaderStyle"/>
    </LinearLayout>
    <View
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewBuySellRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>